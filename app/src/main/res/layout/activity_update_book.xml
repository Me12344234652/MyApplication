<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateBook">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_textFieldName"
                android:hint="@string/form_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_textFieldAuthor"
                android:hint="@string/form_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/form_textFieldPlace"
                android:hint="@string/form_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="Name of the selected book:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="110dp"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="40dp"
                android:id="@+id/textView_Name"/>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
            android:text="Delete Book"
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            android:layout_above="@+id/buttonUpdate"/>
    <com.google.android.material.button.MaterialButton
            android:text="Update Book"
            android:id="@+id/buttonUpdate"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



</RelativeLayout>